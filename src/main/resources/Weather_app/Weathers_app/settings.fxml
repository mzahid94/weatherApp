<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Weather_app.Weathers_app.Settings">
    <children>
        <Button fx:id="goBackButton" layoutX="233.0" layoutY="342.0" mnemonicParsing="false" onAction="#goBackAction"
                text="Go Back"/>
        <Label layoutX="38.0" layoutY="36.0" text="Settings">
            <font>
                <Font name="System Bold" size="32.0"/>
            </font>
        </Label>
        <Label layoutX="100.0" layoutY="106.0" text="Units">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <RadioButton fx:id="metricRadio" layoutX="213.0" layoutY="111.0" mnemonicParsing="false"
                     text="Metric (Default"/>
        <RadioButton fx:id="imperialRadio" layoutX="353.0" layoutY="111.0" mnemonicParsing="false" text="Imperial"/>
        <RadioButton fx:id="ukRadio" layoutX="451.0" layoutY="111.0" mnemonicParsing="false" text="UK"/>
        <Button fx:id="saveButton" layoutX="327.0" layoutY="342.0" mnemonicParsing="false" onAction="#saveAction"
                text="Save"/>
    </children>
</AnchorPane>
