<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" styleClass="bodybg2" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Weather_app.Weathers_app.SecondaryController">
   <children>
      <AnchorPane layoutX="37.0" layoutY="49.0" prefHeight="381.0" prefWidth="575.0">
         <children>
            <VBox alignment="CENTER" layoutX="156.0" layoutY="34.0" prefHeight="255.0" prefWidth="263.0" spacing="20.0">
                <children>
                  <TextArea fx:id="loginMessage" editable="false" prefHeight="44.0" prefWidth="223.0" visible="false" />
                    <Label text="Login" />
                    <TextField fx:id="usernameField" prefHeight="25.0" promptText="Username" />
                    <PasswordField fx:id="passwordField" promptText="Password" />
                  <HBox alignment="CENTER" prefHeight="29.0" prefWidth="157.0">
                     <children>
                        <Button fx:id="signupButton" mnemonicParsing="false" onAction="#switchToSignup" text="Sign Up">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                          <Button fx:id="loginButton" onAction="#login" text="Login">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="guestButton" mnemonicParsing="false" onAction="#switchToPrimary" text="Login as Guest">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
